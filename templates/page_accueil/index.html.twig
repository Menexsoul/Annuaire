{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
<h1>Annuaire des joueurs</h1>

<div class="player-list" style="display: flex; flex-wrap: wrap; gap: 1.5rem;">
  {% for player in players %}
    <div class="player-card" style="border: 1px solid #ccc; padding: 1rem; width: 200px;">
      <h3>{{ player.Prenom }} {{ player.Nom }}</h3>
  <p>{{ player.MaCategorie.Nom }} - {{ player.UnNiveau.nom }}</p>
      <a href="{{ path('player_show', {id: player.id}) }}">Voir la fiche</a>
    </div>
  {% else %}
    <p>Aucun joueur trouv√©.</p>
  {% endfor %}
</div>
{% endblock %}
